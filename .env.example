# ============================================================================
# VECTRYS MONOREPO - Environment Variables Template
# ============================================================================
# IMPORTANT: Never commit the real .env file!
# Copy this file: cp .env.example .env
# Then fill with your actual values
# ============================================================================

# ── Frontend (apps/client) ──
VITE_API_URL=http://localhost:3000/api
VITE_WS_URL=http://localhost:3000
VITE_STRIPE_PUBLIC_KEY=pk_test_xxx
VITE_GOOGLE_CLIENT_ID=xxx.apps.googleusercontent.com

# ── Backend (apps/server) ──
DATABASE_URL=postgresql://USERNAME@localhost:5432/vectrys_lingua
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# JWT Secret (Generate with: openssl rand -base64 32)
JWT_SECRET=change-me-in-production-minimum-32-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# API Keys - Anthropic Claude (for Sage AI)
ANTHROPIC_API_KEY=sk-ant-YOUR_KEY_HERE

# API Keys - ElevenLabs (for Text-to-Speech)
ELEVENLABS_API_KEY=YOUR_KEY_HERE

# Redis (optional - for cache)
REDIS_URL=redis://localhost:6379

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# GDPR & Privacy
DATA_RETENTION_DAYS=90
ENABLE_ANALYTICS=false

# ── External APIs (configure when ready) ──
